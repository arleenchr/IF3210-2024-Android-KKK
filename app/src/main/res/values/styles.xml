<resources>
    <style name="Widget.Theme.Bondoman.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="EditTextLogin">
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:textColorHint">@color/gray_100</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="InputField">
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SpinnerPopupStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor">@color/gray_100</item>
    </style>
    <style name="SettingsStyle">
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="SettingsCategoryStyle">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="SettingsLogoutStyle">
        <item name="android:textColor">@color/red_500</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
</resources>