<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_800">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:background="@color/gray_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />
    <LinearLayout
        android:id="@+id/mainDetail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_800"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/gray_container"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <ImageView
                android:id="@+id/transaction_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_expense_item"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp150000"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="@color/gray_50"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza Hut Delivery - PHD. Dago"
                android:fontFamily="@font/urbanist_regular"
                android:textColor="@color/gray_300"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:id="@+id/location_gmaps_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/green_500" />
                <TextView
                    android:id="@+id/location_gmaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Ir. H. Djuanda No. 342C, Dago Bandung"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Details"
                android:fontFamily="@font/urbanist_semibold"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/time_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:11 AM"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:textAlignment="viewEnd"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/date_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 Mar 2024"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:textAlignment="viewEnd"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/category_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:textAlignment="viewEnd"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/total_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@color/gray_100"
                    android:textSize="14sp"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp100.000"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@color/gray_100"
                    android:textSize="14sp"
                    android:textAlignment="viewEnd"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonTakePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_medium"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                app:background="@drawable/ripple_button"
                app:backgroundTint="@color/gray_800"
                android:textColor="@color/green_700"
                app:strokeColor="#14532D"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"
                android:textAllCaps="false"
                android:text="Retake"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_medium"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                app:background="@drawable/ripple_button"
                app:backgroundTint="#14532D"
                app:strokeColor="#14532D"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"
                android:textAllCaps="false"
                android:text="Confirm"/>

        </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/no_internet_found"
        layout="@layout/no_internet_found"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>