<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_800"
    android:padding="20dp"
    tools:context=".ViewTransaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/gray_container"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_expense_item"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="@color/gray_50"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza Hut Delivery - PHD. Dago"
                android:fontFamily="@font/urbanist_regular"
                android:textColor="@color/gray_300"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:id="@+id/location_gmaps_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/green_500" />
                <TextView
                    android:id="@+id/location_gmaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Ir. H. Djuanda No. 342C, Dago Bandung"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/green_500"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Details"
                android:fontFamily="@font/urbanist_semibold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAlignment="textStart"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/time_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="12sp"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:11 AM"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="12sp"
                    android:textAlignment="viewEnd"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/date_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="12sp"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 Mar 2024"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="12sp"
                    android:textAlignment="viewEnd"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/category_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="12sp"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/gray_300"
                    android:textSize="12sp"
                    android:textAlignment="viewEnd"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/total_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@color/gray_100"
                    android:textSize="12sp"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp100.000"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="@color/gray_100"
                    android:textSize="12sp"
                    android:textAlignment="viewEnd"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Delete"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:fontFamily="@font/urbanist_medium"
                android:textColor="@color/red_500"
                android:background="@drawable/button_danger_outline"
                android:radius="15dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:fontFamily="@font/urbanist_medium"
                android:textColor="@color/white"
                android:background="@drawable/button_primary_green"
                android:radius="15dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>